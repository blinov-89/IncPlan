<Window x:Class="IncPlan.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncPlan"
        mc:Ignorable="d"
        Title="Заказ" Height="158.465" Width="355.079">
    <Grid Margin="10,0,456,301">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="393*"/>
        </Grid.RowDefinitions>
        <Canvas Name="addTaskCanvas" HorizontalAlignment="Left" Height="106" Margin="2,6,0,0" VerticalAlignment="Top" Width="321" Visibility="Visible" Grid.RowSpan="2">
            <Rectangle Height="108" StrokeEndLineCap="Round" Stroke="#FF514B4B" StrokeLineJoin="Round" Width="320" Panel.ZIndex="-1" Fill="#FFECECEC"/>
            <TextBox x:Name="ordersNameField" Height="25" Canvas.Left="9" TextWrapping="Wrap" Canvas.Top="40" Width="295"/>
            <TextBlock Canvas.Left="43" TextAlignment="Center" TextWrapping="Wrap" Canvas.Top="10" Width="235" HorizontalAlignment="Left" FontSize="14" Height="25" FontWeight="Bold" Text="Основание для заказа"/>
            <Button Content="Добавить основание заказа" Canvas.Left="9" Canvas.Top="70" Width="295" Height="25" Click="AddNewOrdersEvent" FontWeight="Bold"/>
        </Canvas>
    </Grid>
</Window>
